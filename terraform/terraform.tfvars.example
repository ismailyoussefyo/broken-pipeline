# Example Terraform variables file
# Copy this to terraform.tfvars and fill in your values

region   = "eu-central-1"
project_name = "broken-pipeline"

# Domain name for Route53 hosted zone (must be a domain you own)
domain_name = "example.com"

# Email address for SNS notifications (must confirm subscription)
email_address = "your-email@example.com"

# Country code for Jenkins ALB restriction
jenkins_allowed_country = "PT"

# Optional: Custom tags
tags = {
  Project     = "BrokenPipeline"
  Environment = "Challenge"
  ManagedBy   = "Terraform"
  Owner       = "YourName"
}

